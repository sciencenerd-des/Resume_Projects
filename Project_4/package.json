{
  "name": "veritydraft",
  "version": "1.0.0",
  "description": "Evidence-Ledger Copilot - Full Stack",
  "type": "module",
  "scripts": {
    "css:build": "bunx tailwindcss -i ./src/styles/main.css -o ./src/styles/output.css",
    "css:watch": "bunx tailwindcss -i ./src/styles/main.css -o ./src/styles/output.css --watch",
    "dev": "bun run css:build && bun --hot src/index.ts",
    "dev:css": "bun run css:watch & bun --hot src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun run css:build && NODE_ENV=production bun build src/frontend.tsx --outdir dist --target browser --minify",
    "build:analyze": "NODE_ENV=production bun build src/frontend.tsx --outdir dist --target browser --minify && ls -lh dist/",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "bun test tests/unit tests/integration",
    "test:watch": "bun test --watch",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:e2e": "bunx playwright test",
    "test:e2e:ui": "bunx playwright test --ui",
    "test:e2e:headed": "bunx playwright test --headed",
    "test:coverage": "bun test tests/unit tests/integration --coverage",
    "db:migrate": "bunx supabase db push"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@supabase/supabase-js": "^2.89.0",
    "@tanstack/react-query": "^5.17.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "cmdk": "^1.1.1",
    "lucide-react": "^0.312.0",
    "mammoth": "^1.11.0",
    "openai": "^6.15.0",
    "pdfjs-dist": "^5.4.530",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "unpdf": "^1.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "bun-types": "^1.0.0",
    "cssnano": "^7.1.2",
    "happy-dom": "^12.10.3",
    "msw": "^2.0.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
