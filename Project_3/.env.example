# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here

# Notion Integration
NOTION_API_KEY=secret_your-notion-integration-token
NOTION_DATABASE_ID=your-database-id-here

# Slack Integration (for real-time notifications)
SLACK_WEBHOOK_URL=your-slack-webhook-url-here

# Slack Bot Token (for file downloads and API access)
# Required for auto-processing file attachments
SLACK_BOT_TOKEN=xoxb-your-bot-token

# Slack Signing Secret (for request verification)
SLACK_SIGNING_SECRET=your-signing-secret

# AI Analysis Configuration
# Enable AI-powered lead classification (requires OpenAI API key)
# When enabled, HOT leads will be analyzed for insights and personalized outreach suggestions
ENABLE_AI_ANALYSIS=false

# Verbose Logging
# Enable detailed debug output for troubleshooting
DEBUG=false

# Agent Architecture (SDK vs Legacy)
# Use OpenAI Agents SDK multi-agent orchestrator (true) or legacy single agent (false)
# Default: true (SDK agents enabled)
# Set to false to instantly rollback to legacy agent if issues arise
USE_SDK_AGENT=true

# Zapier MCP Integration (for Gmail, Google Sheets, etc.)
ZAPIER_MCP_API_KEY=your-base64-encoded-api-key
ZAPIER_MCP_URL=https://mcp.zapier.com/api/mcp/mcp

# Session Storage (for Conversational Mode - Phase 4)
# Redis URL for persistent session storage across server restarts
# If not configured, sessions will use in-memory storage (lost on restart)
# Example: redis://localhost:6379 or redis://user:password@host:port/db
# REDIS_URL=redis://localhost:6379

# Session TTL in seconds (default: 86400 = 24 hours)
# Sessions older than this will be automatically cleaned up
SESSION_TTL_SECONDS=86400

